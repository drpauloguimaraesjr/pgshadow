{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "phases": {
                "install": {
                    "cmds": [
                        "npm install -g corepack@0.24.1 && corepack enable",
                        "pnpm install"
                    ]
                },
                "build": {
                    "cmds": [
                        "pnpm run build"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "npm run start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}